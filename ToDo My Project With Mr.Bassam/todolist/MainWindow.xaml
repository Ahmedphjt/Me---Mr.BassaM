<Window x:Class="todolist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo List" Height="350" Width="300">

    <Grid>
        

        <TextBox  Name="NewTodo" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top"  FontFamily="Calibri"  FontSize="20" FontWeight="Black" Margin="10,10,0,0" Height="30" Width="130">  </TextBox>

        <ListBox Name="List" Margin="10,95,125,10">


            <CheckBox x:Name="box1" IsChecked="True" Height="20" Width="55" >
                Study
            </CheckBox>

            <CheckBox  x:Name="box2" Height="20" Width="100" RenderTransformOrigin="0.5,0.5" >
                Do Tasks
            </CheckBox>

            <CheckBox x:Name="box3" IsChecked="True" Height="20" Width="98" >
                Send_Emails
            </CheckBox>
        </ListBox>
        <StackPanel HorizontalAlignment="Left">
            <Button Content="Add" 
                    FontSize="12" 
                    Margin="10,45,208,242" 
                    Height="22" Width="66" 
                    Click="ButtonClick"> 
            </Button>
        </StackPanel>
    </Grid>

</Window>
